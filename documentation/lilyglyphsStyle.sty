% Common table format for reference tables
\newenvironment{reftable}[2]
	{%
		\begin{table}[ht]
			\begin{center}
				\caption{#1}
				\label{tab:#2}
				\begin{tabular}[t]{lll}
					\toprule
					&\\
	}
	{%
					&\\
					\bottomrule
				\end{tabular}
			\end{center}
		\end{table}
	}


